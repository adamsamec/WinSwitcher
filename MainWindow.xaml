<Window x:Class="WinSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinSwitcher"
xmlns:lang="clr-namespace:WinSwitcher;assembly=WinSwitcher"
        mc:Ignorable="d"
        Title="WinSwitcher"
SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
WindowStyle="None"
Loaded="MainWindow_Loaded"
>
    <Grid>
    <Label Name="llistboxLabel" Target="{Binding ElementName=itemsListBox}" Content="{x:Static lang:Resources.runningApps}" TextBlock.FontSize="20" HorizontalAlignment="Left"/>
    <ListBox Name="itemsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
    <Button Name="settingsButton" Content="{x:Static lang:Resources.settingsButton}"/>
  </Grid>
</Window>
